import pandas as pd
import numpy as np
from datetime import datetime
import os

# Carregar dados
df = pd.read_excel("../FinancialSample.xlsx")
print(f"Dados originais: {df.shape}")

# ==========================================
# TRANSFORMAÇÃO 1: Remover Duplicatas
# ==========================================
linhas_antes = len(df)
df = df.drop_duplicates()
linhas_depois = len(df)
print(f"Duplicatas removidas: {linhas_antes - linhas_depois}")

# ==========================================
# TRANSFORMAÇÃO 2: Tratar Valores Nulos
# ==========================================
print("\nValores nulos por coluna:")
print(df.isnull().sum())

# Preencher valores nulos em colunas numéricas
colunas_numericas = df.select_dtypes(include=[np.number]).columns
for coluna in colunas_numericas:
    if df[coluna].isnull().any():
        mediana = df[coluna].median()
        df[coluna].fillna(mediana, inplace=True)
        print(f"Coluna {coluna}: preenchida com mediana = {mediana}")

# Preencher valores nulos em colunas de texto
colunas_texto = df.select_dtypes(include=['object']).columns
for coluna in colunas_texto:
    if df[coluna].isnull().any():
        df[coluna].fillna('Desconhecido', inplace=True)
        print(f"Coluna {coluna}: preenchida com 'Desconhecido'")

# ==========================================
# TRANSFORMAÇÃO 3: Converter Tipos de Dados
# ==========================================
# Converter coluna Date para datetime
df['Date'] = pd.to_datetime(df['Date'])

# Converter Month Name para categoria
df['Month Name'] = df['Month Name'].astype('category')

# Converter Segment, Country, Product, Discount Band para categoria
df['Segment'] = df['Segment'].astype('category')
df['Country'] = df['Country'].astype('category')
df['Product'] = df['Product'].astype('category')
df['Discount Band'] = df['Discount Band'].astype('category')

# ==========================================
# TRANSFORMAÇÃO 4: Padronizar Valores
# ==========================================
# Padronizar texto (remover espaços, colocar em maiúsculo)
colunas_padronizar = ['Segment', 'Country', 'Product', 'Discount Band', 'Month Name']
for coluna in colunas_padronizar:
    if coluna in df.columns:
        df[coluna] = df[coluna].astype(str).str.strip().str.upper()

# ==========================================
# TRANSFORMAÇÃO 5: Renomear Colunas para Português
# ==========================================
mapeamento_colunas = {
    'Segment': 'segmento',
    'Country': 'pais',
    'Product': 'produto',
    'Discount Band': 'faixa_desconto',
    'Units Sold': 'unidades_vendidas',
    'Manufacturing Price': 'preco_fabricacao',
    'Sale Price': 'preco_venda',
    'Gross Sales': 'vendas_brutas',
    'Discounts': 'descontos',
    'Sales': 'vendas_liquidas',  # Esta é a coluna importante!
    'COGS': 'custo_mercadoria_vendida',
    'Profit': 'lucro',
    'Date': 'data',
    'Month Number': 'numero_mes',
    'Month Name': 'nome_mes',
    'Year': 'ano'
}

# Aplicar renomeação apenas para colunas que existem no DataFrame
mapeamento_aplicar = {k: v for k, v in mapeamento_colunas.items() if k in df.columns}
df = df.rename(columns=mapeamento_aplicar)
print(f"\nColunas renomeadas para português: {list(df.columns)}")

# ==========================================
# TRANSFORMAÇÃO 6: Criar Novas Colunas Calculadas
# ==========================================
# VERIFICAR se a coluna vendas_liquidas existe antes de usar
if 'vendas_liquidas' in df.columns:
    # Calcular margem de lucro
    df['margem_lucro'] = (df['lucro'] / df['vendas_liquidas'] * 100).round(2)
    
    # Calcular percentual de desconto
    df['percentual_desconto'] = (df['descontos'] / df['vendas_brutas'] * 100).round(2)
else:
    print("AVISO: Coluna 'vendas_liquidas' não encontrada. Criando colunas alternativas...")
    # Se não existir, criar uma coluna alternativa baseada em outras colunas
    if 'vendas_brutas' in df.columns and 'descontos' in df.columns:
        df['vendas_liquidas'] = df['vendas_brutas'] - df['descontos']
        df['margem_lucro'] = (df['lucro'] / df['vendas_liquidas'] * 100).round(2)
        df['percentual_desconto'] = (df['descontos'] / df['vendas_brutas'] * 100).round(2)
    else:
        print("ERRO: Colunas necessárias para cálculos não encontradas")

# Criar trimestre
df['trimestre'] = ((df['numero_mes'] - 1) // 3 + 1)

# ==========================================
# TRANSFORMAÇÃO 7: Remover Outliers (COM VERIFICAÇÃO)
# ==========================================
def remover_outliers(df, coluna):
    if coluna in df.columns:
        Q1 = df[coluna].quantile(0.25)
        Q3 = df[coluna].quantile(0.75)
        IQR = Q3 - Q1
        limite_inferior = Q1 - 1.5 * IQR
        limite_superior = Q3 + 1.5 * IQR
        return df[(df[coluna] >= limite_inferior) & (df[coluna] <= limite_superior)]
    else:
        print(f"AVISO: Coluna {coluna} não encontrada para remoção de outliers")
        return df

colunas_para_outliers = ['lucro', 'vendas_liquidas', 'unidades_vendidas']
for coluna in colunas_para_outliers:
    if coluna in df.columns:
        linhas_antes = len(df)
        df = remover_outliers(df, coluna)
        linhas_depois = len(df)
        print(f"Outliers removidos da coluna {coluna}: {linhas_antes - linhas_depois} registros")
    else:
        print(f"AVISO: Coluna {coluna} não encontrada para análise de outliers")

# ==========================================
# VALIDAÇÕES DE QUALIDADE (COM VERIFICAÇÕES)
# ==========================================
print("\n=== VALIDAÇÕES DE QUALIDADE ===")

total_celulas = df.shape[0] * df.shape[1]
celulas_preenchidas = df.count().sum()
completude = (celulas_preenchidas / total_celulas) * 100
print(f"Completude: {completude:.2f}%")

duplicatas = df.duplicated().sum()
unicidade = ((len(df) - duplicatas) / len(df)) * 100
print(f"Unicidade: {unicidade:.2f}%")

# Validações específicas (com verificações)
if 'lucro' in df.columns:
    lucro_negativo = (df['lucro'] < 0).sum()
    print(f"Registros com lucro negativo: {lucro_negativo}")
else:
    lucro_negativo = 0
    print("AVISO: Coluna 'lucro' não encontrada")

if 'percentual_desconto' in df.columns:
    desconto_invalido = (df['percentual_desconto'] > 100).sum()
    print(f"Registros com desconto superior a 100%: {desconto_invalido}")
else:
    desconto_invalido = 0
    print("AVISO: Coluna 'percentual_desconto' não encontrada")

if 'unidades_vendidas' in df.columns:
    unidades_negativas = (df['unidades_vendidas'] < 0).sum()
    print(f"Registros com unidades vendidas negativas: {unidades_negativas}")
else:
    unidades_negativas = 0
    print("AVISO: Coluna 'unidades_vendidas' não encontrada")

# ==========================================
# TRANSFORMAÇÃO 8: Corrigir Inconsistências (COM VERIFICAÇÕES)
# ==========================================
# Corrigir lucros negativos (se necessário)
if 'lucro' in df.columns and lucro_negativo > 0:
    print(f"\nCorrigindo {lucro_negativo} registros com lucro negativo...")
    df.loc[df['lucro'] < 0, 'lucro'] = 0

# Corrigir descontos inválidos
if 'percentual_desconto' in df.columns and desconto_invalido > 0:
    print(f"Corrigindo {desconto_invalido} registros com desconto inválido...")
    df.loc[df['percentual_desconto'] > 100, 'percentual_desconto'] = 100
    df.loc[df['percentual_desconto'] < 0, 'percentual_desconto'] = 0

# Corrigir unidades vendidas negativas
if 'unidades_vendidas' in df.columns and unidades_negativas > 0:
    print(f"Corrigindo {unidades_negativas} registros com unidades negativas...")
    df.loc[df['unidades_vendidas'] < 0, 'unidades_vendidas'] = 0

# ==========================================
# FINALIZAÇÃO
# ==========================================
# Adicionar data de processamento
df['data_processamento'] = datetime.now()

# Reordenar colunas para melhor organização
colunas_ordenadas = [
    'segmento', 'pais', 'produto', 'faixa_desconto', 'data', 'ano', 
    'numero_mes', 'nome_mes', 'trimestre', 'unidades_vendidas',
    'preco_fabricacao', 'preco_venda', 'vendas_brutas', 'descontos',
    'vendas_liquidas', 'custo_mercadoria_vendida', 'lucro', 'margem_lucro',
    'percentual_desconto', 'data_processamento'
]

# Manter apenas colunas que existem no DataFrame
colunas_finais = [col for col in colunas_ordenadas if col in df.columns]
df = df[colunas_finais]

# Salvar dados limpos
import os
os.makedirs('data/silver', exist_ok=True)  # Criar diretório se não existir
df.to_csv('data/silver/dados_financeiros_limpos.csv', index=False, encoding='utf-8')
print(f"\nDados limpos salvos: {df.shape}")
print(f"Arquivo salvo em: data/silver/dados_financeiros_limpos.csv")

# Resumo final
print("\n=== RESUMO FINAL ===")
print(f"Total de registros: {len(df)}")
print(f"Total de colunas: {len(df.columns)}")
print(f"Colunas disponíveis: {list(df.columns)}")

if 'ano' in df.columns:
    print(f"Período dos dados: {df['ano'].min()} a {df['ano'].max()}")
if 'segmento' in df.columns:
    print(f"Segmentos únicos: {df['segmento'].nunique()}")
if 'pais' in df.columns:
    print(f"Países únicos: {df['pais'].nunique()}")
if 'produto' in df.columns:
    print(f"Produtos únicos: {df['produto'].nunique()}")
    
