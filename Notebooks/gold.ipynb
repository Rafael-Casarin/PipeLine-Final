import pandas as pd

# carregar silver
df = pd.read_csv('../data/silver/dados_financeiros_limpos.csv')

# feature engineering
df['lucro_zscore'] = (df['lucro'] - df['lucro'].mean()) / df['lucro'].std()
df['transacao_suspeita'] = df['lucro_zscore'] > 2

# lucro médio por país
df['lucro_medio_pais'] = df.groupby('pais')['lucro'].transform('mean')
df['lucro_relativo_pais'] = df['lucro'] / df['lucro_medio_pais']

# dia da semana (converte a coluna 'data' para datetime)
df['dia_da_semana'] = pd.to_datetime(df['data']).dt.day_name(locale='pt_BR')

# agregação por país
agg_pais = df.groupby('pais').agg(
    vendas_totais=('vendas_brutas', 'sum'),
    lucro_medio=('lucro', 'mean'),
    lucro_total=('lucro', 'sum'),
    total_transacoes=('vendas_brutas', 'count')
).reset_index()

# salvar
df.to_csv('../data/gold/transacoes_enriquecidas.csv', index=False)
agg_pais.to_csv('../data/gold/resumo_por_pais.csv', index=False)

print("GOLD finalizado!")
